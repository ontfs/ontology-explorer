<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.ontio.mapper.StorageNodeInfoMapper">
    <resultMap id="BaseResultMap" type="com.github.ontio.model.dao.StorageNodeInfo">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="public_key" jdbcType="VARCHAR" property="publicKey"/>
        <result column="node_rank" jdbcType="INTEGER" property="nodeRank"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="address" jdbcType="CHAR" property="address"/>
        <result column="node_type" jdbcType="INTEGER" property="nodeType"/>
        <result column="introduction" jdbcType="VARCHAR" property="introduction"/>
        <result column="logo_url" jdbcType="VARCHAR" property="logoUrl"/>
        <result column="region" jdbcType="VARCHAR" property="region"/>
        <result column="longitude" jdbcType="DECIMAL" property="longitude"/>
        <result column="latitude" jdbcType="DECIMAL" property="latitude"/>
        <result column="ip" jdbcType="VARCHAR" property="ip"/>
        <result column="website" jdbcType="VARCHAR" property="website"/>
        <result column="social_media" jdbcType="VARCHAR" property="socialMedia"/>
    </resultMap>

    <cache type="com.github.ontio.config.RedisCache">
        <property name="eviction" value="LRU"/>
        <property name="size" value="1024"/>
        <property name="readOnly" value="false"/>
    </cache>

    <select id="selectStorageNodeCount" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM tbl_storage_node_info;
    </select>

    <select id="selectStorageNode" resultType="com.github.ontio.model.dao.StorageNodeInfoDetail" useCache="true">
        SELECT public_key as publicKey,
               node_rank as nodeRank,
               name,
               address,
               node_type as nodeType,
               introduction,
               logo_url as logoUrl,
               region,
               longitude,
               latitude,
               ip,
               website,
               social_media as socialMedia
        FROM tbl_storage_node_info
        ORDER BY node_rank;
    </select>

</mapper>